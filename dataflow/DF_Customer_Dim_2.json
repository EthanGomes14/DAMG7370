{
	"name": "DF_Customer_Dim_2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Customer_Data_2",
						"type": "DatasetReference"
					},
					"name": "sourceCUSTOMER2"
				},
				{
					"dataset": {
						"referenceName": "Dim_Customer",
						"type": "DatasetReference"
					},
					"name": "Source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Dim_Customer",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "surrogateKey"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "select"
				},
				{
					"name": "MaxCustomerSKJoin"
				}
			],
			"scriptLines": [
				"source(output(",
				"          customerid as string,",
				"          CustomerName as string,",
				"          billTo as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCUSTOMER2",
				"source(output(",
				"          MAXCUSTOMERSK as decimal(38,0)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     query: 'SELECT NVL(MAX(CUSTOMER_SK),0) as MaxCustomerSK from ETHAN_DADABI_SCHEMA.Dim_Customer',",
				"     format: 'query') ~> Source1",
				"MaxCustomerSKJoin keyGenerate(output(RowNum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey",
				"surrogateKey derive(pid = \"0\",",
				"          DI_CreatedDt = currentTimestamp(),",
				"          CustomerName = rtrim(CustomerName),",
				"          customerid = toInteger(customerid),",
				"          Customer_SK = MAXCUSTOMERSK + RowNum) ~> derivedColumn",
				"derivedColumn select(mapColumn(",
				"          customerid,",
				"          CustomerName,",
				"          pid,",
				"          DI_CreatedDt,",
				"          Customer_SK",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select",
				"sourceCUSTOMER2, Source1 join(1==1,",
				"     joinType:'cross',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> MaxCustomerSKJoin",
				"select sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          CUSTOMER_SK as decimal(38,0),",
				"          CUSTOMER_ID as decimal(38,0),",
				"          CUSTOMER_NAME as string,",
				"          DI_CREATEDDT as timestamp,",
				"          PID as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     mapColumn(",
				"          CUSTOMER_SK = Customer_SK,",
				"          CUSTOMER_ID = customerid,",
				"          CUSTOMER_NAME = CustomerName,",
				"          DI_CREATEDDT = DI_CreatedDt,",
				"          PID = pid",
				"     )) ~> sink"
			]
		}
	}
}