{
	"name": "Sales_Flow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Sales_Data",
						"type": "DatasetReference"
					},
					"name": "sourceSalesFACT"
				}
			],
			"sinks": [
				{
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "surrogateKey"
				},
				{
					"name": "derivedColumn"
				}
			],
			"scriptLines": [
				"source(output(",
				"          invoiceId as string,",
				"          customerid as string,",
				"          invoiceDate as string,",
				"          ShipTo as string,",
				"          ShipTo_City as string,",
				"          ShipTo_Country as string,",
				"          SalespersonPersonID as string,",
				"          SalespersonName as string,",
				"          total_product_cnt as string,",
				"          Total as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceSalesFACT",
				"sourceSalesFACT keyGenerate(output(invoice_sk as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey",
				"surrogateKey derive(pid = \"0\",",
				"          DI_CreatedDt = currentDate()) ~> derivedColumn",
				"derivedColumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     mapColumn(",
				"          INVOICE_SK = invoice_sk,",
				"          INVOICE_ID = invoiceId,",
				"          CUSTOMER_ID = customerid,",
				"          INVOICE_DT = invoiceDate,",
				"          TOTAL_PRODUCT_CNT = total_product_cnt,",
				"          TOTAL_PRODUCT_COST = Total,",
				"          DI_CREATEDDT = DI_CreatedDt,",
				"          PID = pid",
				"     ),",
				"     format: 'table') ~> sink"
			]
		}
	}
}