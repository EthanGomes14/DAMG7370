{
	"name": "DF_Customer_Dim_1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Customer_Data_1",
						"type": "DatasetReference"
					},
					"name": "sourceCUSTOMER1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Dim_Customer",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "surrogateKey"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          customerid as string,",
				"          CustomerName as string,",
				"          billTo as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCUSTOMER1",
				"sourceCUSTOMER1 keyGenerate(output(customer_sk as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey",
				"surrogateKey derive(pid = \"0\",",
				"          DI_CreatedDt = currentTimestamp(),",
				"          CustomerName = rtrim(CustomerName),",
				"          customerid = toInteger(customerid)) ~> derivedColumn",
				"derivedColumn select(mapColumn(",
				"          customerid,",
				"          CustomerName,",
				"          customer_sk,",
				"          pid,",
				"          DI_CreatedDt",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          CUSTOMER_SK as decimal(38,0),",
				"          CUSTOMER_ID as decimal(38,0),",
				"          CUSTOMER_NAME as string,",
				"          DI_CREATEDDT as timestamp,",
				"          PID as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     mapColumn(",
				"          CUSTOMER_SK = customer_sk,",
				"          CUSTOMER_ID = customerid,",
				"          CUSTOMER_NAME = CustomerName,",
				"          DI_CREATEDDT = DI_CreatedDt,",
				"          PID = pid",
				"     )) ~> sink"
			]
		}
	}
}