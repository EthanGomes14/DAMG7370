{
	"name": "Customer_Flow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Customer_Data_1",
						"type": "DatasetReference"
					},
					"name": "sourceCUSTOMER1"
				}
			],
			"sinks": [
				{
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "surrogateKey"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          customerid as string,",
				"          CustomerName as string,",
				"          billTo as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCUSTOMER1",
				"sourceCUSTOMER1 keyGenerate(output(customer_sk as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey",
				"surrogateKey derive(pid = \"0\",",
				"          DI_CreatedDt = currentDate(),",
				"          CustomerName = rtrim(CustomerName)) ~> derivedColumn",
				"derivedColumn select(mapColumn(",
				"          customerid,",
				"          CustomerName,",
				"          customer_sk,",
				"          pid,",
				"          DI_CreatedDt",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     mapColumn(",
				"          CUSTOMER_SK = customer_sk,",
				"          CUSTOMER_ID = customerid,",
				"          CUSTOMER_NAME = CustomerName,",
				"          PID = pid,",
				"          DI_CREATEDDT = DI_CreatedDt",
				"     ),",
				"     format: 'table') ~> sink"
			]
		}
	}
}